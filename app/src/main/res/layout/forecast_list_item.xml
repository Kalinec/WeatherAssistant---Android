<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/textView_forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView_forecast_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_forecast_day"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/imageView_forecastIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView_forecast_hour"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/layout_forecast_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_forecastIcon"
            android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView_forecast_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textView_forecast_temperatureType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°C"
                    android:textSize="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_forecast_windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_forecast_temperature"
            android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView_forecast_windSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textView_forecast_windSpeedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" km/h"
                    android:textSize="16dp"/>
        </LinearLayout>

</RelativeLayout>